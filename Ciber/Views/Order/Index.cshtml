@model Ciber.Models.View.OrderViewModel
@{
    ViewBag.Title = "Order List";
}
<h2>Order List</h2>
<div class="row">
    <div class="col-md-2">
        <label>
            Filter by Category
        </label>
    </div>
    <div class="col-md-3">
        <select id="ddlProductCategory" class="form-control">
            <option value="0">-- Choose Product Category --</option>
            @{
                foreach (var item in Model.CategoryProductList)
                {
                    <option value=@item.ProductCategoryId> @item.Name</option>
                }
            }
        </select>
    </div>
    <div class="col-md-7 text-right">
        <a class="btn btn-primary" href="/Order/Create"> Add New Order</a>
     
    </div>
</div>

<hr />
<table class="table table-bordered cell-border" id="dtOrders">
    <thead>
        <tr>
            <th>
                Order Name
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Category
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Order Date
            </th>
            <th>
                Amount
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderList)
        {
            <tr>
                <td>
                    @item.OrderName
                </td>
                <td>
                    @item.ProductName
                </td>
                <td>
                    @item.ProductCategoryName
                </td>
                <td>
                    @item.CustomerName
                </td>
                <td>
                    @item.OrderDate
                </td>
                <td>
                    @item.Amount
                </td>

            </tr>
        }
    </tbody>

</table>
<script src="\js\orders\index.js?v=@DateTime.Now.ToFileTime()"></script>
@if (TempData["Msg"] != null)
{
    <script>
        $(document).ready(function () {
            toastr.success('@TempData["Msg"]');
        });
    </script>
}


