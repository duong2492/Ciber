@model Ciber.Models.View.CreateOrderViewModel
@{
    ViewBag.Title = "Create New Order";
}


<h2>Create New Order</h2>
<hr />
<form asp-controller="Order" class="form-horizontal" enctype="multipart/form-data" asp-action="CreateNewOrder" method="post" id="Myform">
    <div class="form-group">
        <label class="control-label col-sm-4">Order Name</label>
        <div class="col-sm-6">
            <input class="form-control" id="txtOrderName" asp-for="Order.OrderName">
            @*@Html.EditorFor(model => model.o)*@
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Product</label>
        <div class="col-sm-6">
            <select id="ddlProduct" class="form-control" asp-for="Order.Product_ID">
                <option value="0">-- Choose Product --</option>
                @{
                    foreach (var item in Model.ProductList)
                    {
                        <option value=@item.ProductId> @item.Name</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-4">Customer</label>
        <div class="col-sm-6">
            <select id="ddlCustomer" class="form-control" asp-for="Order.Customer_ID">
                <option value="0">-- Choose Customer --</option>
                @{
                    foreach (var item in Model.CustomerList)
                    {
                        <option value=@item.CustomerId> @item.Name</option>
                    }
                }
            </select>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-4">Order Date</label>
        <div class="col-sm-6">
            <input class="form-control" id="txtDate" type="date" asp-for="Order.CreateDate">
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-4">Amount</label>
        <div class="col-sm-6">
            <input class="form-control" id="txtAmount" asp-for="Order.Amount">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10 offset-1 text-right">
            <input class="btn btn-primary" id="btnSave" type="submit" value="Create Order" onclick="return validateForm();">
            <a class="btn btn-warning" href="/Order/Index"> Back to list</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4">
        </div>
        <div class="col-sm-6">
            @if (TempData["Msg"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @Html.Raw(TempData["Msg"])
                </div>
            }
        </div>
    </div>
</form>
<script src="\js\orders\createOrder.js?v=@DateTime.Now.ToFileTime()"></script>